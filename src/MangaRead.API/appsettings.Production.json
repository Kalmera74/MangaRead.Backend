{
  "HostSettings": {
    "Url": "http://0.0.0.0:5050"
  },
  "FileUpload": {
    "FileOptions": [
      {
        "FileType": "Image",
        "RealPath": "./wwwroot/storage/images",
        "UrlPath": "/storage/images",
        "MaxFileSizeInBytes": 10485760,
        "AllowedExtensions": ["jpg", "jpeg", "png", "gif", "webp"]
      },
      {
        "FileType": "Video",
        "RealPath": "./wwwroot/storage/videos",
        "UrlPath": "/storage/images",
        "MaxFileSizeInBytes": 52428800,
        "AllowedExtensions": [".mp4", ".mkv"]
      },
      {
        "FileType": "Text",
        "RealPath": "./wwwroot/storage/text",
        "UrlPath": "/storage/images",
        "MaxFileSizeInBytes": 52428800,
        "AllowedExtensions": [".txt", ".pdf"]
      }
    ]
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "SqlLite": "Data Source=../MangaLuckDB.db",
    "MySql": "server=91.99.7.31; database=MangaluckAPI; user=root; password=159753"
  },
  "AllowedHosts": "*"
}
